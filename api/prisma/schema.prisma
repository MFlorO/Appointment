
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum Role {
  admin
  user
  professional
}


enum AppointmentStatus {
  PENDING
  ATTENDED
  CANCELED
  NO_SHOW
}

model User {
  dni             String          @id @unique
  email           String          @unique
  password        String
  nombre          String
  apellido        String
  domicilio       String
  telefono        String
  healthInsurance HealthInsurance?
  appointments    Appointment[]
  role            Role            @default(user)  //Tiene como default el rol de user
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
}

model ObraSocial {
  id               Int               @id 
  nombre           String            @unique
  healthInsurances HealthInsurance[]
  professionals    Professional[]    @relation("ProfessionalObraSociales")
}


model HealthInsurance { //Obra social
  id               Int           @id @default(autoincrement())    
  obraSocial       ObraSocial    @relation(fields: [obraSocialId], references: [id])
  obraSocialId     Int            
  plan             String
  numeroAfiliado   String
  user             User           @relation(fields: [userDni], references: [dni])
  userDni          String         @unique
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
}


model Appointment {
  id              Int           @id @default(autoincrement())
  fecha           DateTime
  hora            String
  user            User          @relation(fields: [userDni], references: [dni])
  userDni         String         
  status          AppointmentStatus
  professional    Professional  @relation(fields: [professionalDni], references: [dni])
  professionalDni String
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

model Professional {
  dni              String           @id @unique
  nombre           String
  apellido         String
  password         String
  precioConsulta   Int
  obraSociales     ObraSocial[]      @relation("ProfessionalObraSociales")  
  schedules        Schedule[]
  appointments     Appointment[]
  role             Role              @default(professional)  //Tiene como default el rol de professional
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
}

model Schedule {
  id              Int           @id @default(autoincrement())
  fecha           String
  horaInicio      String
  horaFinal       String
  professional    Professional  @relation(fields: [professionalDni], references: [dni])
  professionalDni String
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}



